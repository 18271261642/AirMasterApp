<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <com.hjq.bar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        app:lineVisible="false"
        app:titleColor="@color/white"
        app:leftIcon="@drawable/ic_white_left_back"
        app:title="Log"/>

  <Button
      android:id="@+id/clearBtn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Clear"/>



    <Button
        android:id="@+id/requestBtn"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:text="获取气压"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/lefAddBtn"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="不带停止左前+"/>

        <Button
            android:id="@+id/leftRemoveBtn"
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="@color/white"
            android:text="不带停止左前-"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/lefAddBtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="@color/white"
            android:text="带停止左前+"/>
        <Button
            android:id="@+id/leftRemoveBtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginStart="@dimen/dp_15"
            android:textColor="@color/white"
            android:text="带停止左前-"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/intoBtn"
            android:visibility="gone"
            android:layout_margin="@dimen/dp_10"
            android:text="进入低压模式"/>

        <Button
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/outBtn"
            android:layout_margin="@dimen/dp_10"
            android:text="退出di压模式"/>


    </LinearLayout>


   <androidx.core.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <TextView
               android:id="@+id/logTv"
               android:textSize="@dimen/sp_20"
               android:textColor="@color/white"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>

           <TextView
               android:id="@+id/updateLogTv"
               android:textSize="@dimen/sp_20"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>

       </LinearLayout>

   </androidx.core.widget.NestedScrollView>

</LinearLayout>