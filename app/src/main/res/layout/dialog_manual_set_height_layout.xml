<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/second_theme_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/itemPlayTitleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_15"
            android:gravity="center"
            android:text="1/6检测最低高度"
            android:textColor="#FF4D00"
            android:textSize="20sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent" />

        <com.app.airmaster.car.view.CarHomeCenterView
            android:id="@+id/manualHeightView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center" />

        <View
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">


        <TextView
            android:id="@+id/manualHeightOrLowDescTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="请设定最低高度，\n设置完成后点击保存"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="@dimen/dp_15"
            android:orientation="horizontal">


            <com.hjq.shape.view.ShapeTextView
                android:id="@+id/manualDialogCancelTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_15"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_5"
                android:paddingEnd="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_5"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:shape_radius="@dimen/dp_25"
                app:shape_solidColor="#333333"
                app:shape_solidPressedColor="#80333333" />

            <com.hjq.shape.view.ShapeTextView
                android:id="@+id/manualDialogConfirmTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_15"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingStart="@dimen/dp_25"
                android:paddingTop="@dimen/dp_5"
                android:paddingEnd="@dimen/dp_25"
                android:paddingBottom="@dimen/dp_5"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:shape_radius="@dimen/dp_25"
                app:shape_solidColor="#FF4B00"
                app:shape_solidPressedColor="#80FF4B00" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>