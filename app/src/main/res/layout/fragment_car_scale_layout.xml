<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <com.app.airmaster.widget.CommTitleView
        android:layout_width="match_parent"
        android:id="@+id/sysScaleTitleView"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_30"
        android:text="@string/string_sensor_fl"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1F2022"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/dp_15"
            android:textSize="@dimen/sp_14"/>

        <com.app.airmaster.widget.ScaleView
            android:id="@+id/leftFrontScaleView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="@dimen/dp_10"
            android:layout_height="@dimen/dp_30"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_marginEnd="@dimen/dp_15"
            android:textSize="@dimen/sp_14"/>


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_30"
        android:text="@string/string_sensor_fr"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1F2022"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/dp_15"
            android:textSize="@dimen/sp_14"/>


        <com.app.airmaster.widget.ScaleView
            android:id="@+id/rightFrontScaleView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="@dimen/dp_10"
            android:layout_height="@dimen/dp_30"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_marginEnd="@dimen/dp_15"
            android:textSize="@dimen/sp_14"/>


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_30"
        android:text="@string/string_sensor_rl"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1F2022"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/dp_15"
            android:textSize="@dimen/sp_14"/>


        <com.app.airmaster.widget.ScaleView
            android:id="@+id/leftRearScaleView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="@dimen/dp_10"
            android:layout_height="@dimen/dp_30"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_marginEnd="@dimen/dp_15"
            android:textSize="@dimen/sp_14"/>


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_30"
        android:text="@string/string_sensor_rr"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1F2022"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/dp_15"
            android:textSize="@dimen/sp_14"/>


        <com.app.airmaster.widget.ScaleView
            android:id="@+id/rightRearScaleView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="@dimen/dp_10"
            android:layout_height="@dimen/dp_30"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_marginEnd="@dimen/dp_15"
            android:textSize="@dimen/sp_14"/>


    </LinearLayout>


</LinearLayout>