<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">


    <View
        android:id="@+id/gaugeMidView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="2dp"
        android:background="#3D3D44"
        android:layout_height="0dp"/>


    <com.app.airmaster.widget.VerticalSeekBar
        app:layout_constraintRight_toLeftOf="@id/gaugeMidView"
        app:layout_constraintTop_toTopOf="@id/gaugeMidView"
        app:layout_constraintBottom_toBottomOf="@id/gaugeMidView"
        android:id="@+id/gaugeLeftSeekBar"
        android:layout_width="10dp"
        android:progress="1"
        android:progressTint="@color/transparent"
        android:progressDrawable="@null"
        android:progressBackgroundTint="@color/transparent"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="-10dp"
        android:thumb="@mipmap/ic_car_home_middle_bot_left"
        android:layout_height="0dp"/>


    <com.app.airmaster.widget.VerticalSeekBar
        app:layout_constraintLeft_toRightOf="@id/gaugeMidView"
        app:layout_constraintTop_toTopOf="@id/gaugeMidView"
        app:layout_constraintBottom_toBottomOf="@id/gaugeMidView"
        android:id="@+id/gaugeRightSeekBar"
        android:layout_width="10dp"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="-10dp"
        android:progress="1"
        android:progressTint="@color/transparent"
        android:progressDrawable="@null"
        android:progressBackgroundTint="@color/transparent"
        android:thumb="@mipmap/ic_car_home_middle_bot_right"
        android:layout_height="0dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>