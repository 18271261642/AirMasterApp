<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginStart="@dimen/dp_15"
    android:layout_marginEnd="@dimen/dp_15"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_60"
    android:orientation="horizontal"
    android:paddingStart="@dimen/dp_5"
    android:paddingEnd="@dimen/dp_5"
    app:shape_endColor="#ff1b1b1b"
    app:shape_radius="@dimen/dp_35"
    app:shape="rectangle"
    app:shape_centerColor="#ff22201c"
    app:shape_startColor="#FF1B1B1B">


    <FrameLayout
        android:id="@+id/homeGearResetLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/homeGearResetImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/gear_selector" />


    </FrameLayout>


    <FrameLayout
        android:id="@+id/bot1Layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/botBg1Img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@mipmap/ic_home_bot_n_b"
            android:visibility="invisible" />


        <ImageView
            android:id="@+id/botAboveImg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@mipmap/ic_home_bot_number_bg"
            android:visibility="invisible" />


        <TextView
            android:id="@+id/gear1Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:button="@null"
            android:fontFamily="@font/lato_regular15"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="bold" />

    </FrameLayout>


    <FrameLayout
        android:id="@+id/bot2Layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/botBg2Img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@mipmap/ic_home_bot_n_b"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/gear2Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:button="@null"
            android:fontFamily="@font/lato_regular15"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/botAboveImg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@mipmap/ic_home_bot_number_bg"
            android:visibility="invisible" />


    </FrameLayout>


    <FrameLayout
        android:id="@+id/bot3Layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/botBg3Img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@mipmap/ic_home_bot_n_b"
            android:visibility="invisible" />


        <TextView
            android:id="@+id/gear3Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:button="@null"
            android:fontFamily="@font/lato_regular15"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/botAboveImg3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@mipmap/ic_home_bot_number_bg"
            android:visibility="invisible" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/bot4Layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/botBg4Img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/ic_home_bot_n_b"
            android:visibility="invisible" />


        <TextView
            android:id="@+id/gear4Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:button="@null"
            android:fontFamily="@font/lato_regular15"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/botAboveImg4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@mipmap/ic_home_bot_number_bg"
            android:visibility="invisible" />

    </FrameLayout>


</com.hjq.shape.layout.ShapeLinearLayout>